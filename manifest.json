{
    "manifest_version": 3,
    "name": "Medium Stats Enhancer",
    "version": "1.0",
    "description": "Adds 'Today Views' and 'Today Reads' columns to Medium Stats, updating them in real-time without reloading.",
    "permissions": [],
    "host_permissions": ["https://medium.com/*"],
    "content_scripts": [
        {
            "matches": ["https://medium.com/me/stats*"],
            "js": ["dist/content.bundle.js"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_title": "Medium Stats Enhancer"
    }
}
